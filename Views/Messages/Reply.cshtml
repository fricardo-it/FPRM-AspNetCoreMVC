@model FPRMAspNetCoreMVC.Models.ReplyViewModel

@{
    ViewData["Title"] = "Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"] </h4>
<hr/>
<form asp-action="Reply" method="post">
    <div class="form-group">
        <label asp-for="ReplyContent"></label>
        <textarea class="form-control" asp-for="ReplyContent"></textarea>
        <span asp-validation-for="ReplyContent" class="text-danger"></span>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary"asp-action="Index">Cancel</a>       
    </div>


</form>