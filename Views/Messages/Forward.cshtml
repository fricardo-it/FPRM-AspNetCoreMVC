@model FPRMAspNetCoreMVC.Models.ForwardViewModel

@{
    ViewData["Title"] = "Forward Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.Administrators != null)
{
    <form asp-action="Forward" method="post">
        
        <div class="form-group">
            <label asp-for="ForwardedToId" class="control-label"></label>
            <select asp-for="ForwardedToId" class="form-control" asp-items="ViewBag.Administrators">                
                <option value="">Select Administrator</option>
            </select>
            <span asp-validation-for="ForwardedToId" class="text-danger"></span>
        </div>
        

@*         <div class="form-group">
            <label asp-for="ForwardedToId">Forward to:</label>
            <select asp-for="ForwardedToId" class="form-control" asp-items="@(new SelectList(ViewBag.Administrators, "Id", "Name"))">
                <option value="">Select Administrator</option>
            </select>
            <span asp-validation-for="ForwardedToId" class="text-danger"></span>
        </div> *@
        <div class="form-group">
            <label asp-for="ForwardedMessageContent">Message Content:</label>
            <textarea asp-for="ForwardedMessageContent" class="form-control"></textarea>
            <span asp-validation-for="ForwardedMessageContent" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="OriginalMessageId"/>
        <button type="submit" class="btn btn-primary">Forward</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
}
else
{
    <p>Error: Administrators list is not available.</p>
}