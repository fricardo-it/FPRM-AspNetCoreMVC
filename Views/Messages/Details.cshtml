@model FPRMAspNetCoreMVC.Models.Message

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SenderMsg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenderMsg.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timestamp)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Replies)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Replies != null)
            {
                @for (var i = 0; i < Model.Replies.Count; i++)
                {
                    <div class="@(i % 2 == 0 ? "row-even" : "row-odd")">
                        @Model.Replies[i]
                    </div>
                }
            }
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary"asp-action="Reply" asp-route-id="@Model.Id">Reply</a>
    <a class="btn btn-dark" asp-action="Forward" asp-route-id="@Model.Id">Forward</a>

    <a class="btn btn-secondary"asp-action="Index">Back</a>
</div>