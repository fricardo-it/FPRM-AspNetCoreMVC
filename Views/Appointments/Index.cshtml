@model IEnumerable<FPRMAspNetCoreMVC.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <h1 class="float-start">@ViewData["Title"]</h1>
    <br>
</div>
<div>
    <a class="btn btn-primary float-end" asp-action="Create">Create New Appointment</a>
    <br><br>
</div>

<table class="table table-hover">
    <thead class="table-secondary">
    <tr>
        <th style="width: 15%;">Tenant</th>
        <th style="width: 20%;">Building</th>
        <th style="width: 25%;">@Html.DisplayNameFor(model => model.AppointmentDate)</th>
        <th style="width: 25%;">@Html.DisplayNameFor(model => model.Message)</th>
        <th style="width: 10%;">@Html.DisplayNameFor(model => model.IsConfirmed)</th>

        <th style="width: 10%;"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 15%;">@Html.DisplayFor(modelItem => item.Tenant.Name)</td>
            <td style="width: 20%;">@Html.DisplayFor(modelItem => item.Building.Name)</td>
            <td style="width: 25%;">@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
            <td style="width: 25%;">@Html.DisplayFor(modelItem => item.Message)</td>
            <td style="width: 10%;">@Html.DisplayFor(modelItem => item.IsConfirmed)</td>
           <td style="width: 10%;">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>